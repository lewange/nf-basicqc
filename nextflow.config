/*
========================================================================================
    BasicQC Pipeline - Nextflow Configuration
========================================================================================
*/

// Global default params
params {
    // Input/output options
    input                   = null
    outdir                  = 'results'

    // Reference files
    fastq_screen_conf       = null
    kraken2_db              = null
    sex_markers_db          = null

    // Skip steps
    skip_fastqc             = false
    skip_fastq_screen       = false
    skip_kraken2            = false
    skip_sex_determination  = false

    // Kraken2 options
    kraken2_save_reads      = false
    kraken2_subsample       = 5000000   // Subsample to 5M reads for Kraken2

    // Resource defaults
    max_cpus                = 16
    max_memory              = '750.GB'
    max_time                = '72.h'

    // Help
    help                    = false

    // MultiQC options
    multiqc_title           = null
    multiqc_config          = null

    // Project metadata (for MultiQC report header)
    project_name            = null    // e.g., 'CGLZOO_01'
    application             = null    // e.g., 'RNA-seq'
}

// Process-specific resource requirements
process {
    // Default resources
    cpus   = { check_max(2, 'cpus') }
    memory = { check_max(4.GB, 'memory') }
    time   = { check_max(4.h, 'time') }

    errorStrategy = { task.exitStatus in [143,137,104,134,139] ? 'retry' : 'finish' }
    maxRetries    = 1
    maxErrors     = '-1'

    // Process-specific resources
    withName: 'FASTQC' {
        cpus   = { check_max(4, 'cpus') }
        memory = { check_max(4.GB, 'memory') }
        time   = { check_max(4.h, 'time') }
    }

    withName: 'FASTQ_SCREEN' {
        cpus   = { check_max(8, 'cpus') }
        memory = { check_max(16.GB, 'memory') }
        time   = { check_max(8.h, 'time') }
    }

    withName: 'KRAKEN2_BATCH' {
        // CPUs, memory, and time are set dynamically in the module based on sample count
        // Retry with more resources on memory/timeout errors
        errorStrategy = { task.exitStatus in [137, 140, 143] ? 'retry' : 'finish' }
        maxRetries = 2
    }

    withName: 'MULTIQC' {
        cpus   = { check_max(2, 'cpus') }
        memory = { check_max(8.GB, 'memory') }
        time   = { check_max(2.h, 'time') }
    }

    withName: 'SEQTK_SUBSAMPLE' {
        cpus   = { check_max(2, 'cpus') }
        memory = { check_max(4.GB, 'memory') }
        time   = { check_max(2.h, 'time') }
    }

    withName: 'SEX_DETERMINATION' {
        cpus   = { check_max(2, 'cpus') }
        memory = { check_max(8.GB, 'memory') }
        time   = { check_max(2.h, 'time') }
    }
}

// Container definitions for each profile
profiles {

    singularity {
        singularity.enabled    = true
        singularity.autoMounts = true
        singularity.cacheDir   = '/scratch_isilon/groups/compgen/lwange/singularity/basicqc'
        docker.enabled         = false
        podman.enabled         = false
        shifter.enabled        = false

        process {
            withName: 'FASTQC' {
                container = 'https://depot.galaxyproject.org/singularity/fastqc:0.12.1--hdfd78af_0'
            }
            withName: 'FASTQ_SCREEN' {
                container = 'https://depot.galaxyproject.org/singularity/fastq-screen:0.16.0--pl5321hdfd78af_0'
            }
            withName: 'KRAKEN2_BATCH' {
                container = 'https://community-cr-prod.seqera.io/docker/registry/v2/blobs/sha256/0f/0f827dcea51be6b5c32255167caa2dfb65607caecdc8b067abd6b71c267e2e82/data'
            }
            withName: 'KRAKEN2' {
                container = 'https://community-cr-prod.seqera.io/docker/registry/v2/blobs/sha256/0f/0f827dcea51be6b5c32255167caa2dfb65607caecdc8b067abd6b71c267e2e82/data'
            }
            withName: 'SEX_DETERMINATION' {
                // Uses Python only - available in the multiqc container
                container = 'https://depot.galaxyproject.org/singularity/multiqc:1.27--pyhdfd78af_0'
            }
            withName: 'MULTIQC' {
                container = 'https://depot.galaxyproject.org/singularity/multiqc:1.27--pyhdfd78af_0'
            }
            withName: 'SEQTK_SUBSAMPLE' {
                container = 'https://depot.galaxyproject.org/singularity/seqtk:1.4--he4a0461_2'
            }
        }
    }

    docker {
        docker.enabled         = true
        docker.userEmulation   = true
        singularity.enabled    = false
        podman.enabled         = false
        shifter.enabled        = false

        process {
            withName: 'FASTQC' {
                container = 'biocontainers/fastqc:v0.12.1_cv1'
            }
            withName: 'FASTQ_SCREEN' {
                container = 'quay.io/biocontainers/fastq-screen:0.16.0--pl5321hdfd78af_0'
            }
            withName: 'KRAKEN2_BATCH' {
                container = 'community.wave.seqera.io/library/kraken2_coreutils_pigz:920ecc6b96e2ba71'
            }
            withName: 'KRAKEN2' {
                container = 'community.wave.seqera.io/library/kraken2_coreutils_pigz:920ecc6b96e2ba71'
            }
            withName: 'SEX_DETERMINATION' {
                container = 'quay.io/biocontainers/multiqc:1.27--pyhdfd78af_0'
            }
            withName: 'MULTIQC' {
                container = 'quay.io/biocontainers/multiqc:1.27--pyhdfd78af_0'
            }
            withName: 'SEQTK_SUBSAMPLE' {
                container = 'quay.io/biocontainers/seqtk:1.4--he4a0461_2'
            }
        }
    }

    conda {
        conda.enabled          = true
        docker.enabled         = false
        singularity.enabled    = false
        podman.enabled         = false
        shifter.enabled        = false
    }

    test {
        params.max_cpus   = 2
        params.max_memory = '6.GB'
        params.max_time   = '6.h'
    }

}

// Export environment variables
env {
    PYTHONNOUSERSITE = 1
    R_PROFILE_USER   = "/.Rprofile"
    R_ENVIRON_USER   = "/.Renviron"
}

// Capture exit codes from upstream processes when piping
process.shell = ['/bin/bash', '-euo', 'pipefail']

// Timestamp and log outputs
def trace_timestamp = new java.util.Date().format('yyyy-MM-dd_HH-mm-ss')

timeline {
    enabled = true
    file    = "${params.outdir}/pipeline_info/execution_timeline_${trace_timestamp}.html"
}

report {
    enabled = true
    file    = "${params.outdir}/pipeline_info/execution_report_${trace_timestamp}.html"
}

trace {
    enabled = true
    file    = "${params.outdir}/pipeline_info/execution_trace_${trace_timestamp}.txt"
}

dag {
    enabled = false
    file    = "${params.outdir}/pipeline_info/pipeline_dag_${trace_timestamp}.svg"
}

// Function to check resource limits
def check_max(obj, type) {
    if (type == 'memory') {
        try {
            if (obj.compareTo(params.max_memory as nextflow.util.MemoryUnit) == 1)
                return params.max_memory as nextflow.util.MemoryUnit
            else
                return obj
        } catch (all) {
            println "   ### ERROR ###   Max memory '${params.max_memory}' is not valid! Using default value: $obj"
            return obj
        }
    } else if (type == 'time') {
        try {
            if (obj.compareTo(params.max_time as nextflow.util.Duration) == 1)
                return params.max_time as nextflow.util.Duration
            else
                return obj
        } catch (all) {
            println "   ### ERROR ###   Max time '${params.max_time}' is not valid! Using default value: $obj"
            return obj
        }
    } else if (type == 'cpus') {
        try {
            return Math.min(obj, params.max_cpus as int)
        } catch (all) {
            println "   ### ERROR ###   Max cpus '${params.max_cpus}' is not valid! Using default value: $obj"
            return obj
        }
    }
}

// Manifest
manifest {
    name            = 'nf-basicqc'
    author          = 'CryoZoo Project'
    homePage        = ''
    description     = 'Basic QC pipeline for Illumina FASTQ files'
    mainScript      = 'main.nf'
    nextflowVersion = '!>=23.04.0'
    version         = '1.0.0'
}
